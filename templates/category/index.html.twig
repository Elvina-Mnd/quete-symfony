{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container main-content-programs">
    <h1 class="text-center"> Categories:</h1>
    <div class="text-right">
	    <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm">Create a new category</a>
    </div>
    {% for category in categories %}
        <div>
            <a href="{{ path("category_show", { categoryName: category.name }) }}"><h2> {{ loop.index }} / {{ category.name }}</h2> </a>
        </div>
    {% else %}
        No category found.
    {% endfor %}
        <div class="text-center">
            <a href="{{ path('app_index') }}" class="btn btn-primary">Back to the homepage</a>
        </div>
</div>
{% endblock %}