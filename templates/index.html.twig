{% include "base.html.twig" %}

{% block body %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="d-block w-100" src="{{ asset ('build/the-witcher.jpg') }}" alt="The Witcher">
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="{{ asset ('build/walkingdead.jpg') }}" alt="walkingdead">
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="{{ asset ('build/greysanatomy.jpeg') }}" alt="greys">
		</div>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
    <div class="container mt-5">
    <h2>Our last programs added:</h2>
		<div class="row">
			{% for program in programs %}
				<div class="col-lg-3 col-md-6 col-sm-12">
					<div class="card">
						<img src="{{ program.poster }}" class="card-img-top" alt="{{ program.title }}">
						<div class="card-body text-center">
							<h5 class="card-title primary">{{ loop.index }}
								/
								{{ program.title }}
								- Category: 
								{{ program.category.name }}</h5>
							<p class="card-text">{{ program.summary}}</p>
							<a href="{{ path("program_show", {  slug: program.slug }) }}" class="btn btn-primary">See the details</a>
						</div>
					</div>
				</div>
			{% else %}
				No program found.
			{% endfor %}
		</div>
	</div>
{% endblock %}