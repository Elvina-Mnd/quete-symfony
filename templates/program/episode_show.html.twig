{% extends 'base.html.twig' %}
{% block title %}Episode{{ episode.number }}{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-0">Episode {{ episode.number }} of the program {{ program.title }}</h1>
            <p>Title: {{ episode.title }}</p>
            <p>Season {{season.number}} <p>
            <p>Synopsis:</br> {{episode.synopsis}} <p>
            <a href="{{ path('program_show', { slug: program.slug}) }}">Back to the program</a>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="container leave-comment-zone">
        <h5 class="text-center comment-title">Have you seen this episode ? Tell us here ! </h5>
        {{ form_start(form) }}
        {{ form_row(form.comment) }}
        {{ form_row(form.rate) }}
        <div class="text-center">
            <button class="btn btn-primary">{{ button_label|default('Send comment') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
    {% endif %}
    {% if comments %}
    <div class="container comments-zone">
    <h5 class="text-center comment-title">All our comments:</h5>
    <div class="col-6">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Rate</th>
                        <th scope="col">Comments</th>
                        <th scope="col">Author</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.rate }}/ 5</td>
                            <td>{{ comment.comment }}</td>
                            <td>{{ comment.author }}</td>
                            {% if is_granted('ROLE_ADMIN')%}
                            <td><form method="post" action="{{ path('program_delete_comment', {'commentId': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                            </form></td>
                            {% elseif app.user is same as comment.author %}
                            <td><form method="post" action="{{ path('program_delete_comment', {'commentId': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                            </form></td>
                            {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
{% endblock %}