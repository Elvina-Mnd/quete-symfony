{% extends 'base.html.twig' %}
{% block title %}Episodes of the season {{ season.number }}{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-0">Season {{ season.number }} of the program {{ program.title }} | {{ season.year }}</h1>
            <p>List of the episodes</p>
            {% for episode in episodes %}
                <div>
                    <a href="{{ path("program_episode_show", {"programId": program.id, "seasonId": season.id, "episodeId": episode.id })}}">{{episode.number}}- {{episode.title}}</a>
                </div>
            {% endfor %}
            <a href="{{ path('program_show', {'id': program.id}) }}" class="btn btn-primary">Back</a>
    </div>
    

{% endblock %}