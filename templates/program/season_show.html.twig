{% extends 'base.html.twig' %}
{% block title %}Episodes de la saison {{ season.number }}{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-0">Saison {{ season.number }} de la série {{ program.title }} | {{ season.year }}</h1>
            <p>Liste des épisodes</p>
            {% for episode in episodes %}
                <div>
                <a href="{{ path("program_episode_show", {"programId": program.id, "seasonId": season.id, "episodeId": episode.id })}}">{{episode.number}} ({{episode.title}})</a>
                </div>
            {% endfor %}
            <a href="{{ path('program_show', {'id': program.id}) }}">Retour à la série</a>
    </div>
    

{% endblock %}