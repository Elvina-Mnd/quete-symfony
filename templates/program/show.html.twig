{% extends 'base.html.twig' %}
{% block title %}SÃ©rie #{{ program.id }}{% endblock %}


{% block body %}
    <div class="media container">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Category : {{ program.category.name }}</p>
            <h2>{{seasons | length }} Season(s): </h2>
                {% for season in seasons %}
                <p>{{season.number}} ({{season.year}})<p>
                <a href="{{ path("program_season_show", {'program': program.id, 'season': season.id}) }}">Episodes of the season {{season.number}}</a>        
                {% endfor %}
                <div class="jumbotron">
                    <strong>Actors :</strong>
                        <ul>
                            {% for actor in program.actors %}
                                <li><a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a><li>   
                            {% else %}
                                <li>No actor found for this program</li>
                            {% endfor %}
                        </ul>
                </div>   
            <hr>
            <div class ="text-center">
            <a href="{{ path('program_index') }}" class="btn btn-primary">Back</a></div>
        </div>
    </div>
{% endblock %}